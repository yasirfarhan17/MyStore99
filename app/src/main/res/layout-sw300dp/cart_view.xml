<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:elevation="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="10dp"
                tools:layout_editor_absoluteX="190dp"
                tools:layout_editor_absoluteY="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/CtTv1"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:layout_gravity="top"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/wt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weight"
                        android:textSize="15dp"
                        android:layout_marginStart="-105dp"
                        android:layout_marginTop="65dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black" />



                    <TextView
                        android:id="@+id/CtTv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rate"
                        android:layout_marginStart="-30dp"
                        android:textSize="15dp"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/black" />



                    <Button
                        android:id="@+id/vBt1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="1 kg"
                        android:textSize="10dp"
                        android:visibility="invisible"
                        android:layout_marginStart="-10dp"
                        android:textColor="@color/black"
                        android:background="@drawable/cartbg"
                        android:layout_marginTop="85dp"
                        android:padding="5dp" />

                    <Button
                        android:id="@+id/vBt2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="@string/_500_gm"
                        android:textSize="10dp"
                        android:layout_marginStart="10dp"
                        android:visibility="invisible"
                        android:textColor="@color/black"
                        android:background="@drawable/cartbg"
                        android:layout_marginTop="85dp"
                        android:padding="5dp" />

                    <Button
                        android:id="@+id/vBt3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="@string/_250_gm"
                        android:textSize="10dp"
                        android:layout_marginStart="10dp"
                        android:visibility="invisible"
                        android:textColor="@color/black"
                        android:background="@drawable/cartbg"
                        android:layout_marginTop="85dp"
                        android:padding="5dp" />




                    <TextView
                        android:id="@+id/CtTv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-95dp"
                        android:layout_marginTop="40dp"
                        android:background="@color/white"
                        android:elevation="10dp"
                        android:padding="3dp"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QTY"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginRight="-10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black" />



                    <Button
                        android:id="@+id/buttonDes"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginRight="-25dp"
                        android:background="@drawable/minusbtn"

                        />



                    <Button
                        android:id="@+id/buttonIns"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/plusbtn" />

                    <TextView
                        android:id="@+id/CtTv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:textSize="15dp"
                        android:layout_marginTop="40dp"
                        android:text=""
                        android:textColor="@color/black" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">
                    <Button
                        android:id="@+id/deletButton"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="95dp"
                        android:background="@drawable/ic_delete_black_24dp"
                        android:backgroundTint="@color/black"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:layoutDirection="rtl"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>