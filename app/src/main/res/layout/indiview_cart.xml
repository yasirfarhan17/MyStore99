<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_main"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#28365b"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/img_cart"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_local_mall_black_24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/convergence"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    app:layout_constraintStart_toEndOf="@+id/img_cart"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="ProductName" />

                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/convergence"
                    android:textColor="@color/ballReleaseColor"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@id/tv_quantity"
                    app:layout_constraintStart_toEndOf="@+id/img_cart"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"
                    tools:text="Rs 15/per  kg" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/convergence"
                    android:textColor="@color/ballReleaseColor"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@id/bt_500gm"
                    app:layout_constraintStart_toEndOf="@+id/img_cart"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_price"
                    tools:text="2 * 14 kg" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/convergence"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/cl_add_dec"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_name"
                    tools:text="Rs 15/per  kg" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_1kg"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/cartbg"
                    android:backgroundTint="#fd7b01"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/img_cart"
                    tools:ignore="SmallSp"
                    tools:text="1 kg" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_500gm"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/cartbg"
                    android:backgroundTint="#fd7b01"
                    android:padding="5dp"
                    android:text="@string/_500_gm"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/bt_1kg"
                    app:layout_constraintTop_toTopOf="@+id/bt_1kg"
                    tools:ignore="SmallSp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_250gm"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/cartbg"
                    android:backgroundTint="#fd7b01"
                    android:padding="5dp"
                    android:text="@string/_250_gm"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/bt_500gm"
                    app:layout_constraintTop_toTopOf="@+id/bt_500gm"
                    tools:ignore="SmallSp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_add_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/bt_250gm"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt_decrease"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/minus_btn"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tv_current_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:elevation="10dp"
                        android:fontFamily="@font/convergence"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/bt_increase"
                        app:layout_constraintStart_toEndOf="@+id/bt_decrease"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="115" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt_increase"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/plus_btn"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>