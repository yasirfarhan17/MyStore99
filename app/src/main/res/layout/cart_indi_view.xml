<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">



<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
   >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#28365b"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/cartImage"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_local_mall_black_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cart_productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"
                android:text="ProductName"
                android:textColor="@color/white"
                android:textSize="17dp"
                app:layout_constraintStart_toEndOf="@+id/cartImage"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/cart_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Type"
                android:textColor="#fd7b01"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/cartImage"
                app:layout_constraintTop_toBottomOf="@+id/cart_productName" />

            <TextView
                android:id="@+id/cart_quant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="quant"
                android:textColor="@color/white"
                android:textSize="17dp"
                app:layout_constraintStart_toEndOf="@+id/cartImage"
                app:layout_constraintTop_toBottomOf="@+id/cart_type" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:text="$ 120"
                android:textColor="#fd7b01"
                android:textSize="17dp"
                app:layout_constraintStart_toEndOf="@+id/buttonIns"
                app:layout_constraintTop_toTopOf="@+id/buttonIns" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDes"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"

                android:background="@drawable/minusbtn"
                app:layout_constraintStart_toEndOf="@+id/cart_quant"
                app:layout_constraintTop_toBottomOf="@+id/cart_type" />


            <TextView
                android:id="@+id/CtTv3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:background="@color/white"
                android:elevation="10dp"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@+id/buttonDes"
                app:layout_constraintTop_toTopOf="@+id/buttonDes" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonIns"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/plusbtn"
                app:layout_constraintStart_toEndOf="@+id/CtTv3"
                app:layout_constraintTop_toTopOf="@+id/CtTv3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/vBt1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/cartbg"
                android:backgroundTint="#fd7b01"
                android:padding="5dp"
                android:text="1 kg"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/cart_quant"
                app:layout_constraintTop_toBottomOf="@+id/cart_quant"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/vBt2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/cartbg"
                android:backgroundTint="#fd7b01"
                android:padding="5dp"
                android:text="@string/_500_gm"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vBt1"
                app:layout_constraintTop_toTopOf="@+id/vBt1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/vBt3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/cartbg"
                android:backgroundTint="#fd7b01"
                android:padding="5dp"
                android:text="@string/_250_gm"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vBt2"
                app:layout_constraintTop_toTopOf="@+id/vBt2" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>